datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  address   String
  role      Role
  ratings   Rating[]
  store     Store?
}

model Store {
  id       Int      @id @default(autoincrement())
  name     String
  email    String
  address  String
  ownerId  Int      @unique
  owner    User     @relation(fields: [ownerId], references: [id])
  ratings  Rating[]
}

model Rating {
  id       Int    @id @default(autoincrement())
  value    Int
  userId   Int
  storeId  Int
  user     User   @relation(fields: [userId], references: [id])
  store    Store  @relation(fields: [storeId], references: [id])

  @@unique([userId, storeId])
}

enum Role {
  ADMIN
  USER
  STORE_OWNER
}
